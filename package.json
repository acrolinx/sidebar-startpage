{
  "name": "acrolinx-server-selector",
  "version": "0.0.1",
  "description": "A Container Component for Acrolinx Integrations that loads the Acrolinx sidebar",
  "scripts": {
    "install": "mkdir app/scripts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -r tmp ",
    "tscWatch": "tsc -w",
    "watchify": "watchify tmp/compiled/main.js -o app/scripts/main.js",
    "browsersync": "browser-sync start --server --files \"app/**/*\" --startPath app",
    "tslint": "tslint src/**/*",
    "tslintFix": "tslint --fix src/**/*",
    "buildDist": "rm -rf tmp/dist && npm run tslint && tsc && mkdir -p tmp && cp -r app tmp/dist && hashcat tmp/dist/index.html"
  },
  "author": "Acrolinx",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "browserify": "^14.1.0",
    "hashcat": "^0.3.1",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "tslib": "^1.6.0"
  }
}
